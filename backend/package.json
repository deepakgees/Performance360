{
  "name": "feedback-app-backend",
  "version": "1.0.0",
  "description": "Backend for Feedback and Self-Assessment Application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node ../scripts/kill-port.js 3001 && nodemon src/index.ts",
    "debug": "node --inspect --require ts-node/register src/index.ts",
    "debug-brk": "node --inspect-brk --require ts-node/register src/index.ts",
    "build": "npm run db:generate && tsc",
    "postbuild": "npx prisma migrate deploy",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "logs:pm2": "pm2 logs feedback-app-backend",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/seed-database.js",
    "db:seed:ts": "ts-node scripts/seed-database.ts",
    "db:reset": "npm run db:push && npm run db:seed",
    "db:migrate-assessments": "node scripts/migrate-self-assessments.js"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jira-client": "^8.2.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
