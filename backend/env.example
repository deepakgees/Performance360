# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/feedbackapp"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"

# Server Configuration
PORT=3001

# CORS Configuration
# Frontend URL for CORS (legacy, still supported)
FRONTEND_URL="http://localhost:3000"

# Allowed origins for CORS (comma-separated list)
# Examples:
# - For local development: "http://localhost:3000,http://127.0.0.1:3000"
# - For network access: "http://192.168.1.100:3000,http://10.144.42.177:3000,http://your-domain.com"
# - For all origins (not recommended for production): "*"
# - For development with any origin: Set NODE_ENV=development (allows all origins)
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://10.144.42.177:3000"

#Whether it is 'production' or 'development' environment. In 'development' environment some apis are allowed unauthenticated
NODE_ENV=development


# Logging Configuration
# Options: ERROR, WARN, INFO, DEBUG, TRACE
# Set to TRACE for detailed API request/response logging
LOG_LEVEL="INFO"

# Rate Limiting Configuration (optional)
# Authentication endpoints (login, register, password reset)
# Default: 50 requests per 15 minutes (development) or 10 requests per 15 minutes (production)
AUTH_RATE_LIMIT_MAX=50
AUTH_RATE_LIMIT_WINDOW_MS=900000

# General API endpoints
# Default: 1000 requests per 15 minutes (development) or 100 requests per 15 minutes (production)
GENERAL_RATE_LIMIT_MAX=1000
GENERAL_RATE_LIMIT_WINDOW_MS=900000

# Email Configuration (optional)
# For Gmail:
# 1. Enable 2-Step Verification on your Google Account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail"
# 4. Use that App Password (16 characters) as SMTP_PASS
# 5. Do NOT use your regular Gmail password
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-16-character-app-password"

# Advanced SMTP Configuration (optional)
# SMTP_TLS_REJECT_UNAUTHORIZED: Set to "false" to allow self-signed certificates (default: "true")
# SMTP_DEBUG: Set to "true" to enable SMTP debug logging (default: "false")
# Note: If you're behind a corporate firewall that blocks SMTP connections, you may need to:
# 1. Configure firewall rules to allow outbound connections on port 587 (or 465 for SSL)
# 2. Use a corporate SMTP relay server instead of Gmail
# 3. Contact your network administrator to whitelist the SMTP server
SMTP_TLS_REJECT_UNAUTHORIZED="true"
SMTP_DEBUG="false"

# Email Sender Configuration (optional)
# SMTP_FROM_NAME: Display name shown in recipient's inbox (default: "Performance360")
# SMTP_FROM_EMAIL: Email address shown as sender (defaults to SMTP_USER if not set)
#   - You can use a dummy address like "noreply@yourdomain.com" to hide the real email
#   - Note: The actual SMTP authentication still uses SMTP_USER
# SMTP_HIDE_SENDER_EMAIL: Set to "true" to attempt hiding the sender email address
#   - IMPORTANT: Many email providers (especially Gmail) will override this and show
#     the authenticated email address for security reasons. This is a limitation of
#     email providers, not the application.
#   - For Gmail: You need to set up "Send mail as" in Gmail settings and verify the
#     address, or use a different email service (SendGrid, Mailgun, etc.) that allows
#     custom from addresses
# SMTP_REPLY_TO: Reply-to address (default: "noreply@performance360.com")
SMTP_FROM_NAME="Performance360"
SMTP_FROM_EMAIL="noreply@performance360.com"
SMTP_HIDE_SENDER_EMAIL="false"
SMTP_REPLY_TO="noreply@performance360.com" 